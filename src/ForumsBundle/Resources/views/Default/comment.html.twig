        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="custom-hero">
                        <h2>Blog forums</h2>
                        <ul class="breadcrumbs">
                            <li><a>forums</a></li>
                            <li>&mdash;</li>
                            <li>Categorie 1</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- /Custom Hero Area -->

    <!-- All Blog -->
    <section class="all-blog section-padding">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
