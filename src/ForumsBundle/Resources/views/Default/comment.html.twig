                                <div class="col-md-12">
                                    <textarea name="comment" rows="7" placeholder="Votre commentaire..."></textarea>
                                    <button class="btn-default btn-small btn-fill" type="submit">Submit comment</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- All Blog -->

{% endblock %}